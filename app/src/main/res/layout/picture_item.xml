<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/iv_picture_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ib_edit_photo"
        app:layout_constraintVertical_bias="1.0"
        tools:background="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/ib_edit_photo"
        android:layout_width="@dimen/thumbnail_edit_dimen"
        android:layout_height="@dimen/thumbnail_edit_dimen"
        android:layout_marginStart="4dp"

        android:layout_marginTop="28dp"
        android:background="@drawable/thumbnail_button_background"
        android:padding="@dimen/margin_normal"
        android:src="@drawable/ic_edit_image"
        android:tint="@color/clickable_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/ib_delete_photo"
        android:layout_width="@dimen/thumbnail_delete_dimen"
        android:layout_height="@dimen/thumbnail_delete_dimen"

        android:layout_marginTop="28dp"
        android:background="@drawable/thumbnail_button_background"
        android:padding="@dimen/margin_normal"
        android:src="@drawable/ic_trash_bin"
        android:tint="@color/clickable_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/ib_edit_photo"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>