<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <include
            android:id="@+id/toolbar"
            layout="@layout/custom_black_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <LinearLayout
            android:id="@+id/ll_date_departure_arrival"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/main_background_color_end"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/margin_normal"
                android:text="Itinéraire prévu"
                android:textColor="@color/white"
                android:textSize="@dimen/progress_bar_small_size" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/v_bus_stop"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/bus_history_normal"
                    app:layout_constraintBottom_toTopOf="@+id/v_vertical_line"
                    app:layout_constraintEnd_toEndOf="@id/v_vertical_line"
                    app:layout_constraintStart_toStartOf="@id/v_vertical_line"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/v_vertical_line"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/text_main_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/v_bus_stop" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_departure_location_date_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/history_event_rounded_corner_background"
                    android:paddingTop="@dimen/margin_normal"
                    android:paddingBottom="@dimen/margin_normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/v_vertical_line"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_date_number"
                        style="@style/history_timeline_day"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_normal"
                        android:gravity="center"
                        android:text="27"
                        app:layout_constraintBottom_toTopOf="@id/tv_date_month"
                        app:layout_constraintEnd_toEndOf="@id/tv_date_month"
                        app:layout_constraintStart_toStartOf="@id/tv_date_month"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_date_month"
                        style="@style/textThirdStyle.normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="jul"
                        app:layout_constraintEnd_toStartOf="@+id/b_date_barrier"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_date_number" />

                    <TextView
                        android:id="@+id/tv_date_year"
                        style="@style/textThirdStyle.normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="2018"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/b_date_barrier"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_date_month" />

                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/b_date_barrier"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:barrierDirection="end"
                        app:constraint_referenced_ids="tv_date_number,tv_date_month" />

                    <View
                        android:id="@+id/v_vertical_line_date_content"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="10dp"
                        android:background="@android:color/darker_gray"
                        app:layout_constraintBottom_toBottomOf="@id/tv_usineDepart"
                        app:layout_constraintStart_toStartOf="@+id/b_date_barrier"
                        app:layout_constraintTop_toTopOf="@id/tv_item_id" />

                    <TextView
                        android:id="@+id/tv_item_id"
                        style="@style/textSecondaryStyle.large"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Usine Poissy "
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/v_vertical_line_date_content"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_usineDepart"
                        style="@style/subtitleStyle.normal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:text="45 Rue Jean Pierre \n Timbaud 78300 Poissy"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/tv_item_id"
                        app:layout_constraintStart_toStartOf="@id/tv_item_id" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_departure_location_date_container" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/v_vertical_line_seconde"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="40dp"
                    android:background="@color/text_main_color"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/v_bus_stop_seconde"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:background="@drawable/bus_history_normal"
                    app:layout_constraintStart_toStartOf="@id/v_vertical_line_seconde"
                    app:layout_constraintEnd_toEndOf="@id/v_vertical_line_seconde"
                    app:layout_constraintTop_toBottomOf="@id/v_vertical_line_seconde"
                    app:layout_constraintBottom_toBottomOf="@id/v_vertical_line_seconde"
                     />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_arrival_location_date_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/history_event_rounded_corner_background"
                    android:paddingTop="@dimen/margin_normal"
                    android:paddingBottom="@dimen/margin_normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/v_vertical_line_seconde"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_date_number_seconde"
                        style="@style/history_timeline_day"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_normal"
                        android:gravity="center"
                        android:text="28"
                        app:layout_constraintBottom_toTopOf="@id/tv_date_month_seconde"
                        app:layout_constraintEnd_toEndOf="@id/tv_date_month_seconde"
                        app:layout_constraintStart_toStartOf="@id/tv_date_month_seconde"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_date_month_seconde"
                        style="@style/textThirdStyle.normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Aug"
                        app:layout_constraintEnd_toStartOf="@+id/b_date_barrier_seconde"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_date_number_seconde" />

                    <TextView
                        android:id="@+id/tv_date_year_seconde"
                        style="@style/textThirdStyle.normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="2018"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/b_date_barrier_seconde"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_date_month_seconde" />

                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/b_date_barrier_seconde"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:barrierDirection="end"
                        app:constraint_referenced_ids="tv_date_number_seconde,tv_date_month_seconde" />

                    <View
                        android:id="@+id/v_vertical_line_date_content_seconde"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="10dp"
                        android:background="@android:color/darker_gray"
                        app:layout_constraintBottom_toBottomOf="@id/tv_item_author_seconde"
                        app:layout_constraintStart_toStartOf="@+id/b_date_barrier_seconde"
                        app:layout_constraintTop_toTopOf="@id/tv_item_id_seconde" />

                    <TextView
                        android:id="@+id/tv_item_id_seconde"
                        style="@style/textSecondaryStyle.large"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Usine Sochaux "
                        app:layout_constraintBottom_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/v_vertical_line_date_content_seconde"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />


                    <TextView
                        android:id="@+id/tv_item_author_seconde"
                        style="@style/subtitleStyle.normal"
                        android:layout_width="174dp"
                        android:layout_height="0dp"
                        android:layout_marginBottom="8dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="57 Avenue du Géneral Leclerc 25218 Montbéliard"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@id/tv_item_id_seconde"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@id/tv_item_id_seconde" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_Container_Nb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_normal"
            android:background="@color/main_background_color_end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_date_departure_arrival">

            <ImageView
                android:id="@+id/iv_truck"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.4"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/tv_container_reference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal_x2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_truck"
                android:text="C38240"
                android:textColor="@color/white" />

            <ImageButton
                android:id="@+id/visual_in_3d"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="@dimen/margin_normal"
                android:src="@drawable/visualize"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/main_background_color_end" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_palet_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#F2F2F2"
            android:orientation="horizontal"
            android:padding="@dimen/margin_normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_Container_Nb">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/pallet_information_text"
                android:textColor="#0070AD"
                android:textSize="@dimen/text_m"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="@dimen/margin_normal"
                android:src="@drawable/badge_setting"
                android:tint="#0094FF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_palet_names_temp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_palet_content"
            app:layout_constraintVertical_bias="0.0" />


        <include
            android:id="@+id/verify_content_dialog_id"
            layout="@layout/activity_verify_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
