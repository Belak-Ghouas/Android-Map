<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.mzd.myapp.ui.login.LoginActivityViewModelImpl" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background"
        android:orientation="vertical">



        <ImageView
            android:layout_width="209dp"
            android:layout_height="167dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_normal_x3"
            android:src="@mipmap/logo"
            app:tint="@color/white"
            android:contentDescription="TODO"
            />


        <TextView
            android:id="@+id/tv_app_nameL"
            style="@style/textMainStyle.normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="34sp"
            tools:text="App" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="@dimen/margin_normal"
            tools:context="com.mzd.myapp.ui.login.LoginActivity">

            <ImageView
                android:id="@+id/iv_login_suggestions_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:paddingStart="@dimen/margin_normal_half"
                android:paddingEnd="0dp"
                android:src="@drawable/ic_arrow_rotate_down"
                app:layout_constraintBottom_toBottomOf="@+id/til_login_layout"
                app:layout_constraintEnd_toStartOf="@+id/til_login_layout"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="ContentDescription"
                app:tint="@color/clickable_color" />

            <LinearLayout
                android:id="@+id/history_scroller_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="@+id/til_login_layout"
                app:layout_constraintStart_toStartOf="@+id/til_login_layout"
                app:layout_constraintTop_toBottomOf="@+id/til_login_layout">

                <HorizontalScrollView
                    android:id="@+id/history_scroller"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginEnd="@dimen/margin_normal"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/ll_login_history_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:layout_marginBottom="@dimen/margin_normal"
                        android:orientation="horizontal">

                    </LinearLayout>
                </HorizontalScrollView>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_password_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal_x2"
                    android:theme="@style/editTextHint.login">

                    <EditText
                        android:id="@+id/sign_in_password"
                        style="@style/deletableEditText.password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/sign_in_enter_password"
                        android:imeOptions="actionDone"

                       />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- there is double margin, because the TextInputLayout and DeletableEditText have both one in there respective styles. -->
                <Button
                    android:id="@+id/btn_sign_in_button"
                    style="@style/compappButton.positive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_normal"
                    android:layout_marginTop="@dimen/margin_normal_x4"
                    android:layout_marginEnd="@dimen/margin_normal"
                    android:enabled="@{viewModel.loginFormValid}"
                    android:text="@string/sign_in_enter" />

                <TextView
                    android:id="@+id/create_acount"
                    style="@style/textMainStyle.large"
                    android:layout_marginTop="@dimen/margin_normal_x4"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_sign_in_button"
                    tools:text="Create your account ?" />

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_login_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal_x4"
                android:layout_marginEnd="@dimen/margin_normal_x4"
                android:theme="@style/editTextHint.login"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/sign_in_login"
                    style="@style/deletableEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="1234567890ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                    android:hint="@string/sign_in_enter_login"
                    android:imeOptions="actionNext"
                    android:inputType="textNoSuggestions|textVisiblePassword"
                    android:singleLine="true"

                    />
            </com.google.android.material.textfield.TextInputLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>