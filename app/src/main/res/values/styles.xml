<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- actionBar titles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/colorPrimary</item>
    </style>


    <style name="MyActionBarSubtitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="AppTheme.ProgressBarTheme">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyActionBarTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <!-- non fullscreen style -->
    <style name="NonFullScreenActivity" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">93%</item>
        <item name="android:windowMinWidthMinor">93%</item>
    </style>

    <!-- toolbar black style -->
    <style name="toolbarBlackStyle" parent="AppTheme">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Toolbar style -->
    <style name="toolbarTitleStyle">
        <item name="android:textSize">@dimen/text_toolbar</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


    <style name="RatingNonFullScreenActivity" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">93%</item>
        <item name="android:windowMinWidthMinor">98%</item>
        <item name="windowFixedHeightMajor">37%</item>
        <item name="windowFixedHeightMinor">37%</item>
    </style>

    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
        <item name="colorControlActivated">@color/clickable_color</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="actionBarTheme">@style/MyActionBarTheme</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="searchViewStyle">@style/SearchView</item>
    </style>


    <style name="loginHistoryItem">

        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/login_history_background</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal</item>
        <item name="android:layout_marginRight">@dimen/margin_normal</item>
        <item name="android:padding">@dimen/margin_normal</item>
    </style>


    <!--designs for login and register-->
    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="loginParent" parent="parent">
        <item name="android:layout_height">match_parent</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="headerText" parent="parent">
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="linearParent" parent="parent">
        <item name="android:orientation">vertical</item>
    </style>


    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="loginButton" parent="viewParent">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/b_background_positive</item>
    </style>






</resources>
